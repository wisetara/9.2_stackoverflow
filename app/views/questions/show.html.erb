<div class="question_block">
  <h1 style="color:#f84;"><%= @question.title %></h1>
  <div class="question_content">
    <%= @question.content %>
  </div>
  <span class="question_author" style="color:#3af">Author: <%= @question.user.username %></span>
</div>

<span class="new_answer"><%= link_to "New Answer", new_answer_path(question_id: @question.id), id: "new_answer_link", remote: true %></span>
